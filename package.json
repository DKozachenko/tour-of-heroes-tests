{
  "name": "angular.io-example",
  "version": "0.0.0",
  "description": "Example project from an angular.io guide.",
  "license": "MIT",
  "scripts": {
    "start": "ng serve",
    "-------Jest Tests-------": "",
    "test:unit:local": "jest --config=jest.config.local.ts",
    "test:unit:local:us": "jest --config=jest.config.local.ts --updateSnapshot",
    "test:unit:ci": "jest --config=jest.config.ci.ts",
    "test:unit:coverage": "jest --config=jest.config.coverage.ts",
    "test:unit:report": "jest --config=jest.config.report.ts",
    "-------Playwright Tests-------": "TODO: добавить префикс pw",
    "test:e2e:local": "playwright test --config=e2e/playwright.config.local.ts --ui",
    "test:e2e:local:docker": "playwright test --config=e2e/playwright.config.local.docker.ts --ui --ui-port=5000 --ui-host=0.0.0.0",
    "test:e2e:local:docker:serve": "bash ./scripts/run-e2e-local-docker.sh",
    "test:e2e:ci": "playwright test --config=e2e/playwright.config.ci.ts",
    "test:e2e:report": "playwright test --config=e2e/playwright.config.report.ts",
    "-------Cypress Tests-------": "",
    "test:e2e:cy:local": "cypress open --e2e --config-file=e2e-cypress/cypress.config.local.ts"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "17.2.4",
    "@angular/common": "17.2.4",
    "@angular/compiler": "17.2.4",
    "@angular/core": "17.2.4",
    "@angular/forms": "17.2.4",
    "@angular/platform-browser": "17.2.4",
    "@angular/platform-browser-dynamic": "17.2.4",
    "@angular/router": "17.2.4",
    "angular-in-memory-web-api": "~0.17.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "17.2.3",
    "@angular/cli": "17.2.3",
    "@angular/compiler-cli": "17.2.4",
    "@playwright/test": "^1.44.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^16.11.35",
    "cypress": "^13.10.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.0.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-marbles": "^3.0.6",
    "jest-preset-angular": "^14.0.3",
    "jest-slow-test-reporter": "^1.0.0",
    "ng-mocks": "^14.12.2",
    "playwright": "^1.44.0",
    "ts-jest": "^29.1.2",
    "ts-mockito": "^2.6.1",
    "ts-node": "~10.9.0",
    "typescript": "~5.3.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "commitizen.config.js"
    }
  }
}
